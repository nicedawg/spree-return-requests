<style type="text/css" media="print">
  #header, #footer, .return-request-printing-instructions {
    display: none;
  }
  #wrapper, table {
    font-family: Helvetica, Arial, sans-serif;
    margin: 0 auto;
    width: 800px;
  }
  table thead tr th, table tbody tr td {
    padding: 5px 10px;
  }
  table thead {
    background-color: #d9d9db;
    text-transform: uppercase;
  }
  .printable-return-form-table tbody td {
    border-bottom: thin solid gray;
  }
</style>

<style type="text/css" media="all">
  .return-request-printout-divider {
    position: relative;
    top: 50%;
    border-top: 3px dashed black;
    margin-top: -3px;
  }

  .scissors {
    content: url(<%= asset_path('scissors.png') %>);
    position: relative;
    top: -15px;
  }

  .printable-return-form-table,
  .printable-return-form-table-meta-info ,
  .printable-returns-address-label {
    width: 800px;
    margin: 0 auto;
  }

  .printable-return-form-table-meta-info tbody td ,
  .printable-return-form-table-meta-info tbody tr {
    border-bottom: 0;
    border-right: 0;
  }

  .printable-return-form-table-meta-info tbody tr td:nth-of-type(1) {
    width: 10em;
  }

  .printable-return-form-table tbody td:nth-of-type(1) ,
  .printable-return-form-table tbody td:nth-of-type(2) ,
  .printable-return-form-table tbody td:nth-of-type(3) {
    border-right: 1px solid gray;
  }

  .printable-return-form-table {
    margin-bottom: 3em;
  }

  .printable-returns-address-label-return-address {
    float: left;
  }

  .printable-returns-address-label-postage-necessary {
    float: right;
    text-align: right;
  }

  .printable-returns-address-label-address {
    clear: both;
    font-size: 1.5em;
    left: 33%;
    line-height: 1.3em;
    padding-top: 20px;
    position: relative;
  }
</style>
